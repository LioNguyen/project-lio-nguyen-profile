{
  "breakpoints": {
    "sm": "750px",
    "md": "900px"
  },
  "colors": {
    "default": {
      "body": "#FAFAFA",
      "buttonBg": "rgba(0,0,0,0.75)",
      "buttonBgHover": "rgba(0,0,0,0.8)",
      "text": "#757575",
      "title": "#333333",
      "titleDark": "#000000"
    }
  },
  "components": {
    "Button": {
      "variants": {
        "solid": {
          "bg": "default.buttonBg",
          "color": "white",
          "borderRadius": "16px",
          "height": "60px",
          "minWidth": "180px",
          "_hover": {
            "bg": "default.buttonBgHover"
          }
        }
      }
    },
    "Container": {
      "variants": {
        "appLayout": {
          "margin": "auto",
          "maxW": "container.lg",
          "paddingBottom": "120px"
        },
        "bottomModalLayout": {
          "bg": "default.body",
          "borderRadius": "16px 16px 0 0",
          "boxShadow": "default.bottomModal",
          "maxW": "100vw",
          "padding": "0",
          "zIndex": "1",
          "position": "fixed",
          "bottom": "0",
          "left": "0",
          "right": "0"
        },
        "footer": {
          "bg": "white",
          "borderRadius": "8px 8px 0 0",
          "boxShadow": "default.footer",
          "maxW": "100vw",
          "paddingTop": "20px",
          "paddingBottom": { "base": "80px", "sm": "40px" }
        },
        "navbar": {
          "bg": "default.body",
          "borderRadius": {
            "base": "8px 8px 0 0",
            "sm": "0 0 8px 8px"
          },
          "maxW": "100vw",
          "padding": "0",
          "position": "fixed",
          "top": { "base": "unset", "sm": "0" },
          "bottom": { "base": "0", "sm": "unset" },
          "left": "0",
          "right": "0",
          "zIndex": "1"
        },
        "pageLayout": {
          "minH": { "base": "unset", "sm": "100vh" },
          "maxH": { "base": "unset" },
          "maxW": "100%",
          "paddingTop": { "base": "30px", "sm": "70px" },
          "paddingBottom": { "base": "50px", "sm": "70px" },
          "position": "relative"
        }
      }
    },
    "Text": {
      "variants": {
        "title": {
          "color": "default.titleDark",
          "fontSize": { "base": "4xl", "sm": "5xl", "md": "6xl" },
          "fontWeight": "bold"
        },
        "subtitle": {
          "color": "default.title",
          "fontSize": { "base": "xl", "md": "2xl" }
        }
      }
    }
  },
  "shadows": {
    "default": {
      "bottomModal": "0 0 7px 1px rgba(0, 0, 0, 0.25)",
      "navbar": "0 0 5px 0 rgba(0, 0, 0, 0.15)",
      "footer": "0 0 5px 1px rgba(0, 0, 0, 0.2)"
    }
  },
  "styles": {
    "global": {
      "*": {
        "transition": "all 0.4s"
      },
      "html": {
        "bg": "default.body",
        "color": "default.text",
        "fontFamily": "'Poppins', sans-serif",
        "scrollBehavior": "smooth"
      },
      "body": {
        "bg": "default.body",
        "margin": "auto"
      }
    }
  }
}
